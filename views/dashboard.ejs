<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - FinTrack</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <span class="logo-icon">üí∞</span>
                <span class="logo-text">FinTrack</span>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="nav-item active" data-view="overview">
                    <span class="nav-icon">üìä</span>
                    <span>Overview</span>
                </a>
                <a href="#" class="nav-item" data-view="expenses">
                    <span class="nav-icon">üí∏</span>
                    <span>Expenses</span>
                </a>
                <a href="#" class="nav-item" data-view="savings">
                    <span class="nav-icon">üí∞</span>
                    <span>Savings</span>
                </a>
                <a href="#" class="nav-item" data-view="budgets">
                    <span class="nav-icon">üéØ</span>
                    <span>Budgets</span>
                </a>
                <a href="#" class="nav-item" data-view="reports">
                    <span class="nav-icon">üìà</span>
                    <span>Reports</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="dashboard-header">
                <h1 id="view-title">Overview</h1>
                <div class="header-actions">
                    <div class="user-info">
                        <span class="user-email" id="userEmail">Loading...</span>
                        <button class="btn btn-secondary btn-sm" onclick="signOut()">Logout</button>
                    </div>
                    <select id="period-selector" class="period-select">
                        <option value="week">This Week</option>
                        <option value="month" selected>This Month</option>
                        <option value="year">This Year</option>
                    </select>
                    <button class="btn btn-primary" id="add-expense-btn">+ Add Expense</button>
                </div>
            </header>

            <!-- Overview View -->
            <div id="overview-view" class="view active">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">Total Spent</div>
                        <div class="stat-value" id="total-spent">‚Çπ0</div>
                        <div class="stat-change positive">+0% from last period</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Transactions</div>
                        <div class="stat-value" id="total-transactions">0</div>
                        <div class="stat-change">This period</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Budget Status</div>
                        <div class="stat-value" id="budget-status">Good</div>
                        <div class="stat-change">Within limits</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Avg. Daily</div>
                        <div class="stat-value" id="avg-daily">‚Çπ0</div>
                        <div class="stat-change">Per day</div>
                    </div>
                </div>

                <div class="content-grid">
                    <div class="card">
                        <h3 class="card-title">Spending by Category</h3>
                        <div id="category-chart" class="chart-container">
                            <div class="empty-state">No expenses yet. Add your first expense to see insights!</div>
                        </div>
                    </div>

                    <div class="card">
                        <h3 class="card-title">Recent Expenses</h3>
                        <div id="recent-expenses" class="expense-list">
                            <div class="empty-state">No recent expenses</div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <h3 class="card-title">Spending Trend</h3>
                    <div id="trend-chart" class="chart-container">
                        <div class="empty-state">Add expenses to see your spending trend</div>
                    </div>
                </div>
            </div>

            <!-- Expenses View -->
            <div id="expenses-view" class="view">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Expenses</h3>
                        <div class="filters">
                            <select id="category-filter" class="filter-select">
                                <option value="">All Categories</option>
                                <option value="Food">Food</option>
                                <option value="Travel">Travel</option>
                                <option value="Shopping">Shopping</option>
                                <option value="Bills">Bills</option>
                                <option value="Entertainment">Entertainment</option>
                                <option value="Education">Education</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div id="all-expenses" class="expense-list">
                        <div class="empty-state">No expenses found</div>
                    </div>
                </div>
            </div>

            <!-- Savings View -->
            <div id="savings-view" class="view">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">Total Saved</div>
                        <div class="stat-value" id="totalSaved">‚Çπ0</div>
                        <div class="stat-change">All time</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">This Period</div>
                        <div class="stat-value" id="periodSaved">‚Çπ0</div>
                        <div class="stat-change">Current period</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Savings Count</div>
                        <div class="stat-value" id="savingsCount">0</div>
                        <div class="stat-change">Total entries</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-label">Top Goal</div>
                        <div class="stat-value" id="topGoal" style="font-size: 18px;">None</div>
                        <div class="stat-change">Most saved for</div>
                    </div>
                </div>

                <div class="content-grid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">All Savings</h3>
                            <div class="filters">
                                <input type="text" id="savingsSearch" class="filter-select" placeholder="Search by goal...">
                                <select id="savingsPeriod" class="filter-select">
                                    <option value="week">This Week</option>
                                    <option value="month" selected>This Month</option>
                                    <option value="year">This Year</option>
                                </select>
                                <button class="btn btn-primary" onclick="showAddSavingModal()">+ Add Saving</button>
                            </div>
                        </div>
                        <div id="savingsList" class="expense-list">
                            <div class="empty-state">No savings yet</div>
                        </div>
                    </div>

                    <div class="card">
                        <h3 class="card-title">Top Savings Goals</h3>
                        <div id="topGoalsList" class="categories-list">
                            <div class="empty-state">No savings goals yet</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Budgets View -->
            <div id="budgets-view" class="view">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Budget Management</h3>
                        <button class="btn btn-primary" id="add-budget-btn">+ Add Budget</button>
                    </div>
                    <div id="budgets-list" class="budgets-container">
                        <div class="empty-state">No budgets set. Create your first budget!</div>
                    </div>
                </div>
            </div>

            <!-- Reports View -->
            <div id="reports-view" class="view">
                <div class="card">
                    <h3 class="card-title">Top Spending Categories</h3>
                    <div id="top-categories" class="categories-list">
                        <div class="empty-state">No data available</div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Expense Modal -->
    <div id="expense-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add Expense</h2>
                <button class="modal-close" onclick="closeExpenseModal()">&times;</button>
            </div>
            <form id="expense-form">
                <div class="form-group">
                    <label for="expense-amount">Amount (‚Çπ)</label>
                    <input type="number" id="expense-amount" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="expense-category">Category</label>
                    <select id="expense-category" required>
                        <option value="">Select Category</option>
                        <option value="Food">üçî Food</option>
                        <option value="Travel">üöó Travel</option>
                        <option value="Shopping">üõç Shopping</option>
                        <option value="Bills">üìÑ Bills</option>
                        <option value="Entertainment">üé¨ Entertainment</option>
                        <option value="Education">üìö Education</option>
                        <option value="Other">üì¶ Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="expense-description">Description</label>
                    <input type="text" id="expense-description" placeholder="Optional">
                </div>
                <div class="form-group">
                    <label for="expense-date">Date</label>
                    <input type="date" id="expense-date" required>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeExpenseModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Expense</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Saving Modal -->
    <div id="savingModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="savingModalTitle">Add Saving</h2>
                <button class="modal-close" onclick="closeSavingModal()">&times;</button>
            </div>
            <form id="savingForm">
                <div class="form-group">
                    <label for="savingAmount">Amount (‚Çπ) *</label>
                    <input type="number" id="savingAmount" step="0.01" required placeholder="Enter amount saved">
                </div>
                <div class="form-group">
                    <label for="savingGoal">Saving Goal *</label>
                    <input type="text" id="savingGoal" required placeholder="e.g., Emergency Fund, Vacation, New Phone">
                </div>
                <div class="form-group">
                    <label for="savingDescription">Description (Optional)</label>
                    <input type="text" id="savingDescription" placeholder="Add notes about this saving">
                </div>
                <div class="form-group">
                    <label for="savingDate">Date *</label>
                    <input type="date" id="savingDate" required>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeSavingModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Budget Modal -->
    <div id="budget-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Set Budget</h2>
                <button class="modal-close" onclick="closeBudgetModal()">&times;</button>
            </div>
            <form id="budget-form">
                <div class="form-group">
                    <label for="budget-category">Category</label>
                    <select id="budget-category" required>
                        <option value="">Select Category</option>
                        <option value="Food">üçî Food</option>
                        <option value="Travel">üöó Travel</option>
                        <option value="Shopping">üõç Shopping</option>
                        <option value="Bills">üìÑ Bills</option>
                        <option value="Entertainment">üé¨ Entertainment</option>
                        <option value="Education">üìö Education</option>
                        <option value="Other">üì¶ Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="budget-amount">Budget Amount (‚Çπ)</label>
                    <input type="number" id="budget-amount" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="budget-period">Period</label>
                    <select id="budget-period" required>
                        <option value="week">Weekly</option>
                        <option value="month" selected>Monthly</option>
                    </select>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeBudgetModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Set Budget</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
    
    <!-- App Scripts -->
    <script src="/js/auth.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/savings.js"></script>
</body>
</html>
